{
  "name": "3d-tetris-battle",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "shared",
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w server",
    "dev:client": "npm run dev -w client",
    "build": "npm run build -w shared && npm run build -w server && npm run build -w client",
    "build:shared": "npm run build -w shared",
    "build:client": "npm run build -w shared && npm run build -w client",
    "build:server": "npm run build -w shared && npm run build -w server",
    "start": "npm run start -w server",
    "clean": "rm -rf node_modules server/node_modules client/node_modules shared/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
